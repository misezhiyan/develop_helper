<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.daydayup.mapper.ScheduleOrderMapper">

    <resultMap id="RESULTMAP_BASE" type="com.daydayup.entity.ScheduleOrder">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="schedule_id" property="scheduleId" jdbcType="INTEGER"/>
        <result column="student_id" property="studentId" jdbcType="INTEGER"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>
    <sql id="COLUMNS_BASE">id,schedule_id,student_id,create_time</sql>

    <select id="list" resultMap="RESULTMAP_BASE">
        select <include refid="COLUMNS_BASE"/>
        from schedule_order
        <where>
            <if test="null != id">
            and id = #{id: INTEGER}
            </if>
            <if test="null != scheduleId">
            and schedule_id = #{scheduleId: INTEGER}
            </if>
            <if test="null != studentId">
            and student_id = #{studentId: INTEGER}
            </if>
            <if test="null != createTime">
            and create_time = #{createTime: TIMESTAMP}
            </if>
        </where>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into schedule_order (
        <trim suffixOverrides=",">
            <if test="null != scheduleId">
                schedule_id,
            </if>
            <if test="null != studentId">
                student_id,
            </if>
            <if test="null != createTime">
                create_time
            </if>
        </trim>
        )values (
        <trim suffixOverrides=",">
            <if test="null != scheduleId">
                #{scheduleId: INTEGER},
            </if>
            <if test="null != studentId">
                #{studentId: INTEGER},
            </if>
            <if test="null != createTime">
                #{createTime: TIMESTAMP}
            </if>
        </trim>
        )
    </insert>

    <update id="updateById">
        update schedule_order
        set
        <if test="null != scheduleId">
            schedule_id = #{scheduleId: INTEGER},
        </if>
        <if test="null != studentId">
            student_id = #{studentId: INTEGER},
        </if>
        <if test="null != createTime">
            create_time = #{createTime: TIMESTAMP},
        </if>
        where id = #{id: INTEGER}
    </update>

    <select id="selectById" resultMap="RESULTMAP_BASE">
        select <include refid="COLUMNS_BASE"/>
        from schedule_order
        where id = #{id: INTEGER}
    </select>

    <select id="select" resultMap="RESULTMAP_BASE">
        select <include refid="COLUMNS_BASE"/>
        from schedule_order
        where schedule_id = #{scheduleId: INTEGER}
    </select>

    <delete id="delById">
        delete from schedule_order
        where id = #{id: INTEGER}
    </delete>

</mapper>